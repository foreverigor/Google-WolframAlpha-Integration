{
	"manifest_version": 2,

	"name": "Google WolframAlpha Integration",
	"description": "ToDo",
	"version": "1.0",

	// Icon in address bar
	"page_action": {
	  "default_icon": "icon.png",
	  "default_title": "Google WolframAlpha Integration",
	  "default_popup": "js/popup.html"
	},
	
	"content_scripts": [
		{
		  "matches": ["http://*/*"],
		  "js": ["js/jquery.js", "js/wolframIntegration.js"]
		}
	  ],
	  
	"permissions": [
	// Pattern: 
	// .de Wildcard doesn't work yet "*://*.google.de/search*"
	"<all_urls>"
	]
}
